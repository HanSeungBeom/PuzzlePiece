<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"

   >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_margin="3dp"


        >
        <View
            android:id="@+id/color_view"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/material_teal"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Grey50"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_row_grid_detail_text"
                android:textColor="@color/Grey700"
                android:text="이 글은 테스트 글입니다 샬ddddddddddddddddddddddddddddddddddddddddddddddddddd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="4dp"
                android:ellipsize="end"
                android:focusable="true"
                android:maxLines="3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|bottom">
                <TextView
                    android:id="@+id/tv_row_grid_detail_date"
                    android:textSize="13dp"
                    android:textColor="@color/Grey500"
                    android:text="2017-02-08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingRight="4dp"
                    android:paddingBottom="4dp"

                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:adjustViewBounds="true"
        android:layout_gravity="right|center"
        android:src="@drawable/semi_circle"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
</FrameLayout>
