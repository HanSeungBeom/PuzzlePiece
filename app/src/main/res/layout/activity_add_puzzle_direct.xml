<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_puzzle_direct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_name"

            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/material_amber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_puzzle"
            android:src="@drawable/puzzles_gray"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:text="퍼즐 만들기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="4dp"/>





    </android.support.v7.widget.Toolbar>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Grey300"/>
    <LinearLayout
        android:animateLayoutChanges="true"
        android:id="@+id/ll_search_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <ImageView
                android:src="@drawable/search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

            <EditText
                android:id="@+id/et_search"
                android:hint="지인 검색"
                android:textColorHint="@color/Grey500"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:textSize="15dp"
                android:textColor="@color/Grey900"
                android:paddingLeft="5dp"
                android:maxLength="20"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/clear"
                android:src="@drawable/ic_clear"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Grey300"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:padding="5dp"
                android:background="@color/blueGrey50"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_search_friend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                </android.support.v7.widget.RecyclerView>
             </LinearLayout>
            <LinearLayout
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="invisible"
                android:gravity="center"
                android:background="@color/blueGrey50">
                <ImageView
                    android:src="@drawable/tab_friends_on"
                    android:tint="@color/Grey500"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:paddingTop="10dp"
                    android:textColor="@color/Grey700"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="@string/no_friend_direct_puzzle"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="13dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/Grey500"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="@string/no_friend_direct_puzzle_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:tint="@color/white"
                android:src="@drawable/ic_user_puzzle"
                android:layout_margin="10dp"
                android:scaleType="center"
                android:layout_gravity="bottom|right"
                android:backgroundTint="@color/Grey900"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Grey300"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:padding="16dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_add_puzzle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:hint="무슨 얘기를 나누셨나요?"
            android:textColorHint="@color/Grey300"
            android:background="@null"/>
    </LinearLayout>

</LinearLayout>
