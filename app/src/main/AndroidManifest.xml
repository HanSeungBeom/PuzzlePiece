<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bumbums.puzzlepiece">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.FriendDetailActivity"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="bumbums.puzzlepiece.ui.MainActivity" />
            >
        </activity>
        <activity
            android:name=".ui.AddPuzzleActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".ui.AddFriendActivity"
            android:theme="@style/Theme.AppCompat.Translucent"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".ui.EditFriendActivity"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity android:name=".ui.PuzzleDetailActivity"
            android:theme="@style/Theme.AppCompat.Translucent"></activity>
    </application>

</manifest>